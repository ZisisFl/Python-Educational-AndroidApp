<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Time for some practice"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Study theory from diffrent python concepts and then test your understanding over them with our quizzes"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" />

                <Button
                    android:id="@+id/quiz1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@color/colorPrimary"
                    android:text="Quiz 1"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/theory1" />

                <Button
                    android:id="@+id/theory1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:background="@color/colorPrimary"
                    android:text="1 Introduction"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="@+id/theory2"
                    app:layout_constraintStart_toStartOf="@+id/theory2"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <Button
                    android:id="@+id/theory2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorPrimary"
                    android:text="2 Decision Making and Loop"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/theory1" />

                <Button
                    android:id="@+id/theory3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorPrimary"
                    android:text="3 Functions"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="@+id/theory2"
                    app:layout_constraintStart_toStartOf="@+id/theory2"
                    app:layout_constraintTop_toBottomOf="@+id/theory2" />

                <Button
                    android:id="@+id/theory4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorPrimary"
                    android:text="4 Data types"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="@+id/theory3"
                    app:layout_constraintStart_toStartOf="@+id/theory3"
                    app:layout_constraintTop_toBottomOf="@+id/theory3" />

                <Button
                    android:id="@+id/quiz2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@color/colorPrimary"
                    android:text="Quiz 2"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/theory2" />

                <Button
                    android:id="@+id/quiz3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@color/colorPrimary"
                    android:text="Quiz 3"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/theory3" />

                <Button
                    android:id="@+id/quiz4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@color/colorPrimary"
                    android:text="Quiz 4"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/theory4" />

                <ImageView
                    android:id="@+id/info1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>